<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SettingActivity">

    <PreferenceCategory app:title="사용자 정보">

        <EditTextPreference
            app:key="name"
            app:title="사용자 이름"
            app:useSimpleSummaryProvider="true" />

        /
    </PreferenceCategory>
    <PreferenceCategory app:title="비상연락망">

        <EditTextPreference
            android:key="phone_number"
            app:dialogTitle="연락처 등록\n(Enter를 이용한 다수 연락처 등록 가능)"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="연락처 등록"
            android:inputType="number"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:dialogTitle="[App발신]\n'Safe_Helmet'에서 알려드립니다."
            app:defaultValue="지금은 테스트 중입니다."
            android:selectAllOnFocus="true"
            app:key="message"
            app:title="비상메시지"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>


</PreferenceScreen>